<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorprimary"
    tools:context=".CashIn_Page2">

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cash In"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/cashin_white" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/gcash_cashin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:text="You are about to Cash in"
        android:textColor="@color/coloraccent"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cashin_EA"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:gravity="center"
        android:hint="PHP 0.00"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="using your GCash account"
        android:textColor="@color/coloraccent"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:text="Please review to ensure that the details are correct  before you proceed."
        android:textAlignment="center"
        android:textColor="@color/coloraccentlight"
        android:textSize="15dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp">

        <Button
            android:id="@+id/cashin_confirm"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/loginbutton"
            android:fontFamily="@font/poppins_semibold"
            android:text="Confirm"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/cashin_cancel"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/signupbutton"
            android:fontFamily="@font/poppins_semibold"
            android:text="Cancel"
            android:textColor="@color/black" />
    </RelativeLayout>




</LinearLayout>